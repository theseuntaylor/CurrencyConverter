<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/background_color"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:text="@string/sign_up"
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/signUpColor"
        android:layout_height="wrap_content" android:id="@+id/signUpText"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" android:layout_marginEnd="20dp" android:fontFamily="@font/asap"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" app:srcCompat="@drawable/ic_menu" android:id="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp" android:layout_marginStart="25dp"/>

    <TextView
        android:text="@string/currency_calculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginTop="60dp" android:layout_marginStart="20dp" android:textSize="32sp"
        android:textColor="#185DFA" android:fontFamily="@font/asap_bold"/>

    <TextView
        android:textColor="@color/signUpColor"
        android:text="@string/full_stop" android:fontFamily="@font/asap_bold"
        android:layout_width="wrap_content" android:textSize="32sp"
        android:layout_height="wrap_content" android:id="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"/>

    <LinearLayout
        android:id="@+id/currency_from_linearLayout"
        android:layout_width="match_parent" android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="50dp"
        android:layout_marginStart="20dp" android:layout_marginEnd="20dp">




        <EditText
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical|end"
            android:background="@color/background_grey"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/currency_from_editText"/>

        <!--
        This might have to be a textView, not so sure yet
        -->

        <TextView
            android:text="EUR"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@color/currency_text_view_color"
            android:background="@color/background_grey"
            android:id="@+id/currency_from_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/currency_to_linearLayout"
        android:layout_width="match_parent" android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/currency_from_linearLayout" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="15dp"
        android:layout_marginStart="20dp" android:layout_marginEnd="20dp">

        <EditText
            android:background="@color/background_grey"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/currency_to_editText"/>

        <!--
        This might have to be a textView, not so sure yet
        -->

        <TextView
            android:text="PLN"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@color/currency_text_view_color"
            android:background="@color/background_grey"
            android:id="@+id/currency_to_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_2"
        app:layout_constraintTop_toBottomOf="@id/currency_to_linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/toSpinner"
            android:layout_weight="1"
            style="@style/spinner_style"
            android:spinnerMode="dropdown"
            />

        <ImageView
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_convert"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <Spinner
            android:id="@+id/fromSpinner"
            android:layout_weight="1"
            style="@style/spinner_style"
            />

    </LinearLayout>

    <Button
        android:id="@+id/convert_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@color/signUpColor"
        android:text="Convert"
        android:padding="5dp"
        android:textSize="20sp"
        android:textColor="@color/background_color"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/asap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear_layout_2" />

</androidx.constraintlayout.widget.ConstraintLayout>